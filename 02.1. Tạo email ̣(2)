#include<bits/stdc++.h>
using namespace std;

int main(){
    int t; cin >> t;
    cin.ignore();
    while(t--){
        string s;
        getline(cin,s);
        for(char &x : s) x=tolower(x);
        stringstream ss(s);
        string tmp;
        vector<string> v;
        while(ss>> tmp){
            v.push_back(tmp);
        }
        cout << v.back();
        for(int i=0; i< v.size()-1; i++){
            cout << v[i][0];
        }
        cout << "@gmail.com" << endl;
    }
}
